{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "messages": {
    "$i18n": "locales.yml"
  },
  "title": {
    "$ref": "#/messages/deploy.title"
  },
  "description": {
    "$ref": "#/messages/deploy.description"
  },
  "longDescription": {
    "$ref": "#/messages/deploy.longDescription"
  },
  "type": "object",
  "properties": {
    "api-key": {
      "description": {
        "$ref": "#/messages/deploy.apiKeyDescription"
      },
      "type": "string",
      "pattern": "\\S",
      "validator": {
          "v-type": "api-key"
      }
    },
    "target-region": {
      "description": {
        "$ref": "#/messages/deploy.regionDescription"
      },
      "type": "string",
      "disabled": false,
      "validator": {
          "v-type": "k8s-region",
          "params": ["api-key"]
      }
    },
    "target-resource-group": {
      "description": {
        "$ref": "#/messages/deploy.groupDescription"
      },
      "type": "string",
      "pattern": "\\S",
      "validator": {
          "v-type": "resource-group",
          "params": ["api-key"]
      }
    },
    "image-name": {
      "description": {
        "$ref": "#/messages/deploy.imageDescription"
      },
      "type": "string",
      "pattern": "\\S"
    },
    "registry-namespace": {
      "description": {
        "$ref": "#/messages/deploy.registryDescription"
      },
      "type": "string",
      "pattern": "^[a-z0-9][-_a-z0-9]{2,28}[a-z0-9]$",
      "validator": {
          "v-type": "k8s-registry-namespace",
          "params": ["target-region"],
          "validate": false
      }
    },
    "workspace-name": {
      "description": {
        "$ref": "#/messages/deploy.workspaceDescription"
      },
      "type": "string",
      "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$"
    },
    "target-cluster-name": {
      "description": {
        "$ref": "#/messages/deploy.clusterDescription"
      },
      "type": "string",
      "pattern": "\\S",
      "validator": {
          "v-type": "k8s-cluster-name",
          "params": ["target-resource-group", "target-region"]
      }
    },
    "target-cluster-namespace": {
      "description": {
        "$ref": "#/messages/deploy.namespaceDescription"
      },
      "type": "string",
      "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$"
    }
  },
  "required": [
    "api-key",
    "target-region",
    "target-resource-group",
    "image-name",
    "registry-namespace",
    "workspace-name"
  ],
  "form": [
    {
      "type": "validator",
      "url": "/devops/validator/validator-v1.html"
    },
    {
      "type": "password",
      "readonly": false,
      "title": {
        "$ref": "#/messages/deploy.apiKey"
      },
      "key": "api-key"
    },
    {
      "type": "select",
      "key": "target-region",
      "readonly": true,
      "title": {
        "$ref": "#/messages/region"
      }
    },
    {
      "type": "select",
      "readonly": false,
      "title": {
        "$ref": "#/messages/deploy.groupName"
      },
      "key": "target-resource-group"
    },
    {
      "type": "select",
      "readonly": false,
      "title": {
        "$ref": "#/messages/deploy.imageRegistryNamespace"
      },
      "key": "registry-namespace"
    },
    {
      "type": "select",
      "readonly": false,
      "title": {
        "$ref": "#/messages/deploy.schematicsWorkspace"
      },
      "key": "workspace-name"
    },

    {
      "type": "text",
      "readonly": false,
      "title": {
        "$ref": "#/messages/deploy.imageName"
      },
      "key": "image-name"
    }
 ]
}
